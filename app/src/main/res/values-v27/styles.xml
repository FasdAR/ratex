<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorSystemUi</item>
        <item name="android:navigationBarColor">@color/colorSystemUi</item>

        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="BaseBottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorSystemUi</item>
        <item name="android:backgroundDimAmount">.3</item>
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bg_bottom_sheet</item>
    </style>
</resources>