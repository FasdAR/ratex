<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorSystemUi</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Toolbar.Main" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorToolbarPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorToolbarSecondaryText</item>
        <item name="actionMenuTextColor">@color/colorToolbarActionMenuText</item>
    </style>
</resources>